<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="layout_news_item">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/layout_news_item_padding</item>
    </style>

    <style name="textview_news_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/textview_padding</item>
        <item name="android:paddingBottom">@dimen/textview_padding</item>
    </style>

    <style name="textview_section_date" parent="textview_news_item">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textview_title" parent="textview_news_item">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
